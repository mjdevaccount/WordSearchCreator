@using WordSearch.Engine.Models
@model WordSearch.Engine.Models.WordSearchGrid

<div class="ws-grid-wrapper">
    <div>
        <table class="ws-puzzle-grid">
            @for (int row = 0; row < Model.Size; row++)
            {
                <tr>
                    @for (int col = 0; col < Model.Size; col++)
                    {
                        var cell = Model.Grid[row, col];
                        if (cell == WordSearchGrid.Empty)
                        {
                            <td class="ws-empty">Â·</td>
                        }
                        else
                        {
                            <td>@cell</td>
                        }
                    }
                </tr>
            }
        </table>
    </div>
    <div class="ws-word-list-panel">
        <div class="ws-word-list-title">Words (@Model.IncludedWords.Count)</div>
        <div>
            @foreach (var word in Model.IncludedWords)
            {
                <span class="ws-word-pill">@word.Word</span>
            }
        </div>
    </div>
</div>
